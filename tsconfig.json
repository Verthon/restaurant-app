{
  "compilerOptions": {
    "baseUrl": "node_modules",
    "types": [
      "cypress",
      "jest"
    ],
    "target": "es5",
    "module": "esnext",
    "lib": [
      "es2015",
      "dom"
    ],
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "rootDirs": [
      "src",
      "stories"
    ],
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*",
    "**/*.ts",
    "tests"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "config"
  ]
}
