{
  "name": "restaurant-site",
  "version": "0.2.0",
  "private": true,
  "homepage": "https://alkinoos-taverna.netlify.com",
  "dependencies": {
    "@brainhubeu/react-carousel": "^1.16.2",
    "@testing-library/dom": "^7.5.7",
    "@testing-library/jest-dom": "^5.8.0",
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.23",
    "@types/react": "^16.9.43",
    "@types/react-datepicker": "^3.0.2",
    "@types/react-dom": "^16.9.8",
    "animate.css": "^4.1.0",
    "aos": "^3.0.0-beta.6",
    "dayjs": "^1.8.26",
    "dotenv": "6.0.0",
    "dotenv-expand": "4.2.0",
    "emailjs-com": "^2.4.1",
    "firebase": "^5.5.9",
    "firebase-admin": "^8.12.1",
    "framer-motion": "^1.11.0",
    "react": "^16.13.1",
    "react-datepicker": "^2.15.0",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-router-hash-link": "^1.2.1",
    "react-scripts": "3.4.1",
    "react-test-renderer": "^16.13.1",
    "react-toastify": "^5.5.0",
    "typescript": "^3.9.6"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && echo '/*    /index.html   200' > build/_redirects",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "deploy": "npm run build && netlify deploy",
    "lint": "eslint ."
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "standard": {
    "ignore": [
      "node_modules",
      "build",
      "public"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@testing-library/react": "^9.5.0",
    "eslint-plugin-standard": "^4.0.1",
    "file-loader": "^6.0.0",
    "jest": "^24.9.0",
    "node-sass": "^4.14.1",
    "prettier": "1.18.2",
    "url-loader": "^4.1.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "resolver": "jest-pnp-resolver",
    "setupFiles": [
      "react-app-polyfill/jsdom"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{ts,tsx}",
      "<rootDir>/src/**/?(*.)(spec|test).{ts,tsx}"
    ],
    "testEnvironment": "jsdom",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web",
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node",
      "tsx",
      "ts"
    ]
  }
}
